var express = require('express');
var app = express();
var router = express.Router();
var userModel = require('../model/users.js');
app.use(express.urlencoded({ extended: true }));
app.use(express.json());


router.get('/', function(req, res, next) {
  res.send('respond with a resource');
});

/* GET Inscription Form */

router.get('/inscription', function (req, res, next) {
     res.render('inscription', { title: 'Formulaire inscription' });
   });


/* POST Inscription Form */


router.post('/inscriptionInfos', function (req, res, next) {
  const email = req.body.email
  const nom = req.body.nom;
  const prenom = req.body.prenom;
  const pwd = req.body.motdepasse;
  const tel = req.body.telephone;
  const type = "candidat";

  var t = [];
  t.append(email);

 // res.creat(email, nom, prenom, pwd, tel, type, callback);

  res.render('inscriptionInfos', { title: 'Formulaire Saisi', infos : t});
  });

  module.exports = router;